<configuration supports_final="true">
  <!-- Settings to configure Solr Search ã€ Solr Indexer and Solr API Lib-->

  <property>
    <name>solr_url</name>
    <value>{{solr_url}}</value>
    <display-name>Solr URL</display-name>
    <description>URL of the Solr Server</description>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>security_enabled</name>
    <value>{{security_enabled}}</value>
    <display-name>Security Enabled</display-name>
    <description>Requires FQDN in solr_url if enabled</description>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>empty_query</name>
    <value>*:*</value>
    <display-name>Empty Query</display-name>
    <description>Query sent when no term is entered</description>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>latest</name>
    <value>true</value>
    <display-name>Latest</display-name>
    <description>Use latest Solr 5.2+ features</description>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>ssl_cert_ca_verify</name>
    <value>true</value>
    <display-name>SSL Certificates Verify</display-name>
    <description>Choose whether Hue should validate certificates received from the server</description>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>solr_zk_path</name>
    <value>/solr</value>
    <display-name>Solr Zookeeper Path</display-name>
    <description>Default path to Solr in ZooKeeper.</description>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>enable_new_indexer</name>
    <value>false</value>
    <display-name>Enable New Indexer</display-name>
    <description>Flag to turn on the morphline based Solr indexer</description>
    <on-ambari-upgrade add="true"/>
  </property>

  <property>
    <name>solrctl_path</name>
    <value>/usr/bin/solrctl</value>
    <display-name>SolrCTL Path</display-name>
    <description>Location of the solrctl binary</description>
    <on-ambari-upgrade add="true"/>
  </property>
     
</configuration>

